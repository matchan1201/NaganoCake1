<section class="item-list">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <table>
            <tr>
                <th>ジャンル検索</th>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= link_to genre.name,items_path(genre_id: genre.id) %></td>
            </tr>
            <% end %>
        </table>
        <a><strong><%= @name %>一覧</strong>（全</a><%= @items.count %><a>件）</a>
      </div>
      <div class="col-xs-9">
      	<strong style="font-size: 30px;">商品一覧（全<%= @items.count %>件）</strong>
        <br>
        <br>
        <div class="images">
          <% @items.each do |item| %>
          <%= link_to item_path(item) do %>
            <div class="col-xs-2" style="margin:0 50px 50px 0;">
              <%= attachment_image_tag item, :image, :fill, 120,80, format: 'jpeg', fallback: "no_image.jpg",size: "120x80" %>
              <br>
              <%= item.name %>
              <br>
              ￥<%= (item.tax_excluded_price *= 1.08).round %>
            </div>
          <% end %>
          <% end %>
          </div>

            </div>
          </section>
