<section class="item-show">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>

          <tbody>

            <tr>
              <td>ケーキ</td>
            </tr>
            <tr>
              <td>焼き菓子</td>
            </tr>
            <tr>
              <td>プリン</td>
            </tr>
            <tr>
              <td>キャンディ</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-xs-9">
        <div class="col-xs-4">
          <%= attachment_image_tag @item, :image, :fill, 300,200, format: 'jpeg', fallback: "no_image.jpg",size: "300x200" %>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          <h2><%= @item.name %></h2>
          <p><%= @item.description %></p>
          <h2 style="display:inline;">￥<%= (@item.tax_excluded_price *= 1.08).round %></h2><%= "(税込)" %>
        </div>
      </div>
      <br>
      <br>
        <div class="col-xs-offset-8">
          <%= form_with model: @cart_item, url: cart_items_path do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :end_user_id, value: @end_user.id %>
          <%= f.select :amount, options_for_select((1..20).to_a),prompt: "個数選択" %>
          <%= f.submit "カートに追加", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>