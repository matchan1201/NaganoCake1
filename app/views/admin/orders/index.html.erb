<section class="items_all">
<div class="container">
  <div class="row">
  <div class="col-xs-offset-1">
  	<strong style="margin-left: 50px;">注文履歴一覧</strong>
  </div>
  <div class="col-xs-offset-11">
    <%= link_to new_admin_item_path do %>
    <span class="glyphicon glyphicon-plus" style="font-size:30px;" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
  <br>
  <div class="col-xs-11 col-xs-offset-1">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <%# binding.pry %>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.to_s(:datetime_jp) %>
              <% end %>
          </td>
          <td><%= order.end_user.first_name %><%= order.end_user.last_name %></td>
          <td><%= order.order_count %></td>
         <%
=begin%>
 <td>
          <% @sum = 0 %> <!-- @sumに0を代入 -->
          <% order.order_details.each do |detail| %> <!-- eachで一つずつを取り出して,そのorderの1対多のorder_detailsテーブルをeachで一つずつ取り出す。 -->
           <% @sum = @sum + detail.quanitity %> <!-- @sumにorder_detailsのquanitityを代入 -->
           <% end %>
           <%= @sum %> <!-- @sumを代入 -->
         </td> 
<%
=end%>
          <td><%= order.order_status_i18n %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

