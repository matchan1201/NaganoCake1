<section class="items_all">
<div class="container">
  <div class="row">
  <div class="col-xs-offset-1">
  	<strong style="margin-left: 50px;">商品一覧</strong>
  </div>
  <div class="col-xs-offset-11">
    <%= link_to new_admin_item_path do %>
    <span class="glyphicon glyphicon-plus" style="font-size:30px;" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
  <br>
  <div class="col-xs-11 col-xs-offset-1">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %>
            </td>
            <td><%= item.name %></td>
            <td><%= item.tax_excluded_price %></td>
            <td><%= item.genre.name %>

            <% if item.is_on_sale == true %>
            <td><%= "販売中" %></td>
            <% else %>
            <td><%= "販売停止中" %>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>